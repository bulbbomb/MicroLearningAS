<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:padding="8dp"
    android:orientation="horizontal" >
    
    <LinearLayout 
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="@color/text_gray"
            />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        >
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            
            <TextView 
            	android:id="@+id/listview_learn_a_name"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textColor="@color/dark_green"
            	android:text="曾理"
            	/>
            
            <TextView
            	android:id="@+id/listview_learn_a_action"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_marginLeft="8dp"
            	android:textColor="@color/text_black"
            	android:text="更新了授课信息"
            	/>
            
            <TextView
                android:id="@+id/listview_learn_a_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/text_gray"
                android:textSize="10sp"
                android:text="17天前"
                />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            
            <TextView
                android:layout_width="24dp"
                android:layout_height="14dp"
                android:gravity="center"
                android:background="@color/icon_blue"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:text="技能"
                />
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="@color/text_gray"
                android:text="专业彩妆系列课"
                />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            
            <TextView 
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:background="@color/icon_orange"
                android:textColor="@color/white"
                android:lines="2"
                android:textSize="10sp"
                android:text="一对一"
                />
            
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                >
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:text="5分钟快速掌握日常妆容"
                    />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:textSize="10sp"
                    android:text="2014-03-01/02/03/04 ..."
                    />
                
            </LinearLayout>
            
        </LinearLayout>
        
        
        
    </LinearLayout>
    
</LinearLayout>
